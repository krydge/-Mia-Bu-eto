<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyBudget.Views.MainPage"
             Title="{Binding Title}">

    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
        <Label Text="Enter your Credentials" />
        <Entry Placeholder="UserName" Text="{Binding UserName}"></Entry>
        <Entry Placeholder="Password" IsPassword="True" Text="{Binding Password}"></Entry>
        <Button Text="Enter" Command="{Binding TestPassword}"></Button>
    </StackLayout>

</ContentPage>